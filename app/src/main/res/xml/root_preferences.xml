<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory app:title="Notification Settings">
        <Preference
            app:key="notification_sound"
            app:title="Notification tone"
            app:summary="Select notification sound"/>

        <SeekBarPreference
            app:key="notification_volume"
            app:title="Notification volume"
            app:defaultValue="80"
            android:max="100"
            app:showSeekBarValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Call Filtering">
        <EditTextPreference
            app:key="blocked_area_codes"
            app:title="Block area codes"
            app:summary="Enter comma-separated area codes (e.g., +1415,+1212)"
            app:dialogTitle="Enter area codes to block"
            app:dialogMessage="Add comma-separated values (e.g., +1415,+1212)"
            app:defaultValue=""/>
    </PreferenceCategory>

    <PreferenceCategory app:title="System Settings">
        <Preference
            app:key="dnd_settings"
            app:title="Do Not Disturb settings"
            app:summary="Configure notification access"/>
    </PreferenceCategory>
</PreferenceScreen>